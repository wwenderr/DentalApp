<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#FFFFFF"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="412dp"
        android:layout_height="245dp"
        android:layout_marginBottom="504dp"
        android:background="@drawable/gradient_animation_firsttask"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/your_first_task"
        android:layout_width="268dp"
        android:layout_height="30dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="39dp"
        android:layout_marginBottom="104dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="Ваше первое задание"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.215"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.078" />

    <TextView
        android:id="@+id/task_brush_teeth"
        android:layout_width="309dp"
        android:layout_height="103dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="39dp"
        android:layout_marginBottom="273dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="Первым шагом на пути к здоровым зубам являются правильные привычки. Чистите зубы два раза в день на протяжении 10 дней."
        android:textColor="#000000"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/your_first_task"
        app:layout_constraintVertical_bias="0.076" />

    <Button
        android:id="@+id/accept_button"
        android:layout_width="297dp"
        android:layout_height="36dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="203dp"
        android:layout_marginEnd="39dp"
        android:layout_marginBottom="54dp"
        android:background="@drawable/rounded_corners"
        android:fontFamily="@font/roboto_medium"
        android:text="ПРИНЯТЬ"
        android:textColor="#FFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/task_brush_teeth" />
</androidx.constraintlayout.widget.ConstraintLayout>